extends layout

block content
  h1 Sign-up in our club

  form(method='POST' action='')
    div
      label(for='first_name') First name:
      input(type='text', placeholder='First name' name='first_name' required='true' )
    div
      label(for='last_name') Last name:
      input(type='textarea', placeholder='Last name' name='last_name' required='true') 
    div
      label(for='username') Username:
      input(type='text', placeholder='Username' name='username'   required='true')
    div
      label(for='password') Password:
      input(type='password', placeholder='Password' name='password' required='true')
    div
      label(for='password_check') Repeat password:
      input(type='password', placeholder='Repeat password' name='password_check' required='true' )
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg